<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/soundButton1Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Sound 1" />

    <Button
        android:id="@+id/soundButton1Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Sound 1"
        android:visibility="gone" />

    <Button
        android:id="@+id/soundButton2Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Sound 2" />

    <Button
        android:id="@+id/soundButton2Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Sound 2"
        android:visibility="gone" />

    <!-- Add more play and stop buttons for additional sounds as needed -->

</LinearLayout>
